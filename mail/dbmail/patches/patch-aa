 #define _XOPEN_SOURCE
 #else
-#define _XOPEN_SOURCE 	500
+#define _XOPEN_SOURCE 	520
+#endif
+#ifdef __NetBSD__
+#define _NETBSD_SOURCE
 #endif
 
 #define __EXTENSIONS__ 		/* solaris */
