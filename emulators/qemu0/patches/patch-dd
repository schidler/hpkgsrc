 bindir="\${prefix}/bin"
 libdir="\${prefix}/lib"
 sysconfdir="\${prefix}/etc"
-confsuffix="/qemu"
+confsuffix=""
 slirp="yes"
 fmod_lib=""
 fmod_inc=""
