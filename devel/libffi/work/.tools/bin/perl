#!/bin/sh
wrapperlog="${TOOLS_WRAPPER_LOG-/boot/develop/hpkgsrc/devel/libffi/work/.work.log}"
echo "[*] "/boot/develop/hpkgsrc/devel/libffi/work/.tools/bin/perl" $@" >> $wrapperlog
echo "<.> echo >> /boot/develop/hpkgsrc/devel/libffi/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /boot/develop/hpkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."" >> $wrapperlog
echo >> /boot/develop/hpkgsrc/devel/libffi/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /boot/develop/hpkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."
