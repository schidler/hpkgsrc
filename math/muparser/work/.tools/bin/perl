#!/bin/sh
wrapperlog="${TOOLS_WRAPPER_LOG-/source/build/hpkgsrc/math/muparser/work/.work.log}"
echo "[*] "/source/build/hpkgsrc/math/muparser/work/.tools/bin/perl" $@" >> $wrapperlog
echo "<.> echo >> /source/build/hpkgsrc/math/muparser/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /source/build/hpkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."" >> $wrapperlog
echo >> /source/build/hpkgsrc/math/muparser/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /source/build/hpkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."
