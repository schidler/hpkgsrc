+sub check_netbsd
+{
+  my ($sysctl_cmd, @output);
+
+  $sysctl_cmd = &Utils::File::locate_tool ("sysctl");
+  @output = (readpipe("$sysctl_cmd -n kern.version"));
+  foreach (@output)
+  {
+    chomp;
+    if (/^NetBSD\s([0-9]+)\.\S+.*/)
+    {
+      return "netbsd-$1";
+    }
+  }
+  return -1;
+}
