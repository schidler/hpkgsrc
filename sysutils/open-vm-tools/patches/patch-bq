+echo `date` ": Executing '$0'"
+
+scriptsdir="`dirname $0`/scripts/`basename $0`.d"
+if [ -d "$scriptsdir" ]; then
+   for scriptfile in "$scriptsdir"/*; do
+      [ -x "$scriptfile" ] && "$scriptfile" suspend-vm
+   done
+fi
+
+ps auxw | grep -q dhclient
+if [ "$?" -eq 0 ]; then
+   dhclient -r
+fi
