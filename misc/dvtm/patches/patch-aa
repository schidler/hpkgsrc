 	@echo CC -o $@
 	@${CC} -o $@ ${OBJ} ${LDFLAGS}
+	@sed "s/VERSION/${VERSION}/g" < dvtm.1 > dvtm.1.out
 
 debug: clean
 	@make CFLAGS='${DEBUG_CFLAGS}'
